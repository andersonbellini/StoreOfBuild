@model IEnumerable<StoreOfBuild.Web.ViewsModels.UserViewModel>
@{
    ViewData["Title"] = "User";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Users</h3>
        <a href="/User/Create" class="btn btn-primary">New</a>
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>
                        <p class="name">E-mail</p>
                    </td>                   
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if(@Model != null)
                {
                    foreach(var viewModel in @Model)
                    {
                        <tr>
                            <td>
                                <a class="name">@viewModel.Email</a>
                            </td>
                            <td>
                                [NOT IMPLEMENTED]
                                <a href="/User/ChangePassword/@viewModel.Id" class="btn btn-default">Change password</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>




